
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Editar</title>
</head>
<body>
    <form action="/estoque/update" method="post">
        <div>
            <label for="Campo-nome">Nome</label>
            <input type="text" name="nome" id="Campo-nome"
                   value="@ViewBag.Estoque.Nome" />
        </div>
        <div>
            <label for="Campo-quantidade">Quantidade</label>
            <input type="text" name="quantidade" id="campo-quantidade"value="@ViewBag.Estoque.Valor"/>
        </div>
        <div>
            <label for="campo-valor">Valor</label>
            <input type="text" name="valor" id="campo-valor"
                   value="@ViewBag.Estoque.Valor" />
        </div>
        <input type="hidden" name="id"
               value="@ViewBag.Estoque.Id" />
        <button type="submit">Salvar</button>
    </form>
</body>
</html>
